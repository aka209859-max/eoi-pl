# PostgreSQL Connection (PC-KEIBA Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pc_keiba
DB_USER=postgres
DB_PASSWORD=your_password_here

# EOI-PL Configuration
EOI_VERSION=1.0-Prime
COVERAGE_SCHEME=A
FREEZE_GENERATION=true

# Thresholds (Coverage A)
GRADE_S_THRESHOLD=0.10
GRADE_A_THRESHOLD=0.25
GRADE_B_THRESHOLD=0.50
GRADE_C_THRESHOLD=0.80

# Data Source
DATA_SOURCE=chihou_data_official
UMACONN_ENABLED=true

# Output
OUTPUT_DIR=./data/output
LOG_DIR=./data/logs

# Security
ODDS_USAGE_FORBIDDEN=true
POPULARITY_USAGE_FORBIDDEN=true
